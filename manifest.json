{
  "manifest_version": 2,
  "name": "3301-hash-alarm",
  "version": "1.0",
  "description": "Within the deep web, there exists a page that hashes to",
  "icons": {
    "48": "icon.svg",
    "96": "icon.svg"
  },

  "browser_action": {
    "default_title": "3301 Hash Alarm",
    "default_icon": "icon.svg",
    "default_popup": "html/popup.html"
  },

  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "notifications",
    "tabs",
    "storage",

    "<all_urls>"
  ],

  "background": {
    "scripts": [ "src/webrequests.js", "src/notifications.js", "background.js" ]
  }
}

